<% i=0 %>
<div>
<table>
<thead>
<th>#</th>
<th>Title</th>
<th>Type</th>
</thead>
<tbody>
<% @issues.each do |issue| %>
<% i=i+1 %>
<tr>
<th scope='row'><%=i%>
<td><%= link_to issue.title, issue_path(issue) %></td>
<td><%= issue.issue_type%></td>
<td><%= link_to "edit" , edit_issue_path(issue) %>
<td> | <%= link_to "delete" , issue_path(issue), method: :delete %>
</tr>
<% end %>
</tbody>
</table>
</div>

<button><%= link_to "Back", root_path%> </button>